<Window x:Class="KeymapDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeymapDesigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="1120">
    <TabControl>
        <TabItem Header="Active">
            <Viewbox Stretch="Uniform">
                <local:LayerAssignmentsControl DataContext="{Binding Path=ActiveLayer}" />
            </Viewbox>
        </TabItem>
        <TabItem Header="Layers">
            <ScrollViewer DataContext="{Binding Path=Definition}">
                <ItemsControl ItemsSource="{Binding Path=Layers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Label Content="{Binding Path=Name}"/>

                                <local:LayerAssignmentsControl DataContext="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
